<!doctype html>
<html lang="fr">
  <%- include('partials/head', { title: 'Mentions légales', clientBase, site }) %>
  <body>
    <%- include('partials/header', { site, clientBase }) %>

    <main class="container">
      <h1>Mentions légales</h1>

      <% const legal = site?.legal || {};
         const editor = legal.editor || {};
         const provider = legal.provider || {};
         const host = legal.host || {}; %>

      <section aria-labelledby="editeur">
        <h2 id="editeur">Éditeur du site</h2>
        <p><strong>Nom / Dénomination :</strong> <%= editor.entity || site?.name || site?.title || 'Studio' %></p>
        <% if (editor.representative) { %>
          <p><strong>Représentant légal :</strong> <%= editor.representative %></p>
        <% } %>
        <% if (editor.status) { %>
          <p><strong>Statut :</strong> <%= editor.status %></p>
        <% } %>
        <% if (editor.siret) { %>
          <p><strong>SIRET :</strong> <%= editor.siret %></p>
        <% } %>
        <% if (editor.email) { %>
          <p><strong>Email :</strong> <a href="mailto:<%= editor.email %>"><%= editor.email %></a></p>
        <% } %>
      </section>

      <section aria-labelledby="prestataire">
        <h2 id="prestataire">Prestataire</h2>
        <p><strong>Raison sociale :</strong> <%= provider.entity || '—' %></p>
        <% if (provider.siret) { %><p><strong>SIRET :</strong> <%= provider.siret %></p><% } %>
        <% if (provider.email) { %><p><strong>Email :</strong> <a href="mailto:<%= provider.email %>"><%= provider.email %></a></p><% } %>
      </section>

      <section aria-labelledby="hebergeur">
        <h2 id="hebergeur">Hébergeur</h2>
        <p><strong>Fournisseur :</strong> <%= host.provider || 'GitHub Pages' %></p>
        <% if (host.company) { %><p><strong>Entreprise :</strong> <%= host.company %></p><% } %>
        <% if (host.address) { %><p><strong>Adresse :</strong> <%= host.address %></p><% } %>
        <% if (host.url) { %><p><strong>Site :</strong> <a href="<%= host.url %>"><%= host.url %></a></p><% } %>
      </section>
    </main>

    <%- include('partials/footer', { site, clientBase }) %>
  </body>
</html>
