<!doctype html>
<html lang="<%= site.lang || 'fr' %>">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= (page?.title ? page.title + ' â€“ ' : '') + (site.title || site.brand || 'Site') %></title>

  <% if (basePath && basePath !== '/') { %>
    <base href="<%= basePath %>">
  <% } %>

  <% if (site.description) { %>
    <meta name="description" content="<%= site.description %>" />
  <% } %>
  <% if (site.seo?.keywords) { %>
    <meta name="keywords" content="<%= site.seo.keywords.join(', ') %>" />
  <% } %>
  <% if (site.seo?.ogImage) { %>
    <meta property="og:image" content="<%= site.seo.ogImage %>" />
  <% } %>

  <link rel="stylesheet" href="assets/styles.css" />
</head>
